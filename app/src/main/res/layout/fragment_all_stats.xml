<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alien.myapplication1.tracks.AllStatsFragment"
    android:id="@+id/all_stats_container">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Uzytkownik"
        android:id="@+id/usernameView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Przebyty dystans:"
        android:id="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/usernameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Czas:"
        android:id="@+id/textView5"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView6"
        android:text="Średnia prędkość:"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5 km"
        android:id="@+id/txtDist"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2:10"
        android:id="@+id/txtTime"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/txtDist"
        android:layout_alignEnd="@+id/txtDist" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10 km/h"
        android:id="@+id/txtSpd"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/txtDist"
        android:layout_alignEnd="@+id/txtDist" />

    <Button
        android:id="@+id/allStatsChartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wykresy"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignEnd="@+id/txtSpd"
        android:layout_alignRight="@id/txtSpd"
        android:layout_below="@id/txtSpd"
        android:layout_marginTop="20dp"/>

</RelativeLayout>